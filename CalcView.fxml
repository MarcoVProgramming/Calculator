<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.calcController">
	<top>
		<TextField promptText="Insert Calculation" fx:id="calctf"
			prefHeight="80" style="-fx-font:26 Arial" />
	</top>
	<left>
		<GridPane>
			<Button text="7" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="1" GridPane.columnIndex="0" prefHeight="80"
				prefWidth="80" />
			<Button text="8" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="80"
				prefWidth="80" />
			<Button text="9" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="1" GridPane.columnIndex="2" prefHeight="80"
				prefWidth="80" />
			<Button text="4" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="2" GridPane.columnIndex="0" prefHeight="80"
				prefWidth="80" />
			<Button text="5" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="2" GridPane.columnIndex="1" prefHeight="80"
				prefWidth="80" />
			<Button text="6" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="2" GridPane.columnIndex="2" prefHeight="80"
				prefWidth="80" />
			<Button text="1" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="3" GridPane.columnIndex="0" prefHeight="80"
				prefWidth="80" />
			<Button text="2" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="3" GridPane.columnIndex="1" prefHeight="80"
				prefWidth="80" />
			<Button text="3" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="3" GridPane.columnIndex="2" prefHeight="80"
				prefWidth="80" />
			<Button text="0" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="4" GridPane.columnIndex="1" prefHeight="80"
				prefWidth="80" />
			<Button text="+" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="1" GridPane.columnIndex="4" prefHeight="80"
				prefWidth="80" />
			<Button text="-" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="2" GridPane.columnIndex="4" prefHeight="80"
				prefWidth="80" />
			<Button text="*" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="3" GridPane.columnIndex="4" prefHeight="80"
				prefWidth="80" />
			<Button text="/" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="4" GridPane.columnIndex="4" prefHeight="80"
				prefWidth="80" />
			<Button text="=" onAction="#startCalculation" style="-fx-font:22 Arial"
				GridPane.rowIndex="4" GridPane.columnIndex="2" prefHeight="80"
				prefWidth="80" />
			<Button text="B" onAction="#cntrlClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="4" GridPane.columnIndex="0" prefHeight="80"
				prefWidth="80" />
			<Button text="C" onAction="#cntrlClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="1" GridPane.columnIndex="5" prefHeight="80"
				prefWidth="80" />
			<Button text="(" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="2" GridPane.columnIndex="5" prefHeight="80"
				prefWidth="80" />
			<Button text=")" onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="3" GridPane.columnIndex="5" prefHeight="80"
				prefWidth="80" />
			<Button text="." onAction="#btnClicked" style="-fx-font:22 Arial"
				GridPane.rowIndex="4" GridPane.columnIndex="5" prefHeight="80"
				prefWidth="80" />
		</GridPane>
	</left>
</BorderPane>

